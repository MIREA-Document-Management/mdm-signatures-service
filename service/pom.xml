        <dependency>
            <groupId>ru.mdm.starters.kafka</groupId>
            <artifactId>mdm-starter-kafka</artifactId>
            <version>local</version>
        </dependency>
        <dependency>
            <groupId>ru.mdm.starters</groupId>
            <artifactId>mdm-starter-authentication</artifactId>
            <version>local</version>
        </dependency>

        <dependency>
            <groupId>ru.mdm.documents</groupId>
            <artifactId>mdm-documents-client</artifactId>
            <version>local</version>
        </dependency>
        <dependency>
            <groupId>ru.mdm.files</groupId>
            <artifactId>mdm-files-client</artifactId>
            <version>local</version>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-r2dbc</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-validation</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-webflux</artifactId>
        </dependency>
