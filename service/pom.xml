    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>ru.mdm.signatures</groupId>
        <artifactId>mdm-signatures</artifactId>
        <version>local</version>
    </parent>

    <artifactId>mdm-signatures-service</artifactId>

    <properties>
        <java.version>17</java.version>
    </properties>
    <dependencies>
        <dependency>
            <groupId>ru.mdm.signatures</groupId>
            <artifactId>mdm-signatures-common</artifactId>
            <version>local</version>
        </dependency>

<!--        <dependency>-->
